<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 col-md-12">
        <div class="row my-4 py-2 create-form-element">
            <h3>Create an ERC-721 NFT</h3>
            <div class="container">
                <div class="row my-4 py-2 create-form-element">
                    <div class="col-lg-6 mx-auto">
                        <%= render partial: "layouts/image_uploader" , locals: {image_id: "image-result-1" ,
                            uploader_input_id: "uploader-input-1" } %>
                    </div>
                </div>
            </div>
        </div>
        <div class="row my-4 py-4 create-form-element">
            <label for="input-name" class="form-label">
                <h3>Name</h3>
            </label>
            <input type="text" id="new-item-name-input" class="form-control min-input" placeholder="Title"
                aria-label="Title" aria-describedby="basic-addon1" />
        </div>
        <div class="row my-4 py-4 create-form-element">
            <div class="my-4">
                <h3>Price</h3>
            </div>
            <div class="dropdown btn-group">
                <input type="text" id="new-item-price-input" class="form-control min-input" id="input-price"
                    placeholder="Price" aria-label="Price" aria-describedby="basic-addon1" />
            </div>
        </div>
        <div class="row my-4 py-4 create-form-element">
            <div class="my-4">
                <h3>Youtube URL</h3>
            </div>
            <div class="dropdown btn-group">
                <input type="text" name="youtube_url" id="new-item-youtube-url-input" class="form-control min-input"
                    id="input-youtube-url" placeholder="Youtube" aria-label="Price" aria-describedby="basic-addon1" />
            </div>
        </div>
        <div class="row my-4 py-4 create-form-element">
            <label class="form-label" for="id-description">
                <h3>Description</h3>
            </label>
            <textarea class="form-control min-input" id="new-item-description-text" name="description"
                rows="3"></textarea>
        </div>
        <div class="row my-4 py-4 create-form-element">
            <label class="form-label" for="input-royalties">
                <h3>Royalties (%)</h3>
            </label>
            <input type="text" name="royalties" class="form-control min-input" id="new-item-royalties-input" value="10"
                aria-label="Royalties" aria-describedby="basic-addon1" />
        </div>
        <div class="row my-4 py-4 create-form-element">
            <div class="my-4">
                <h3>Collection</h3>
            </div>
            <div class="col text-center dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="select-collection-dropdown"
                    data-bs-toggle="dropdown" aria-expanded="false" data-search-option="collection">
                    Select Collection
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                    <% Collection.all.each do |collection| %>
                        <li>
                            <button class="dropdown-item" type="button" data-value="<%= collection.name%>"
                                data-search-option="collection">
                                <%= collection.name %>
                            </button>
                        </li>
                        <% end %>
                </ul>
            </div>
        </div>
        <div class=" row my-4 py-4">
            <button id="new-item-create-button" class="btn btn-primary" type="button">Create</button>
        </div>
    </div>
    <div class="col-lg-3"></div>
</div>

<div class="modal fade" id="progress-bar-wrapper" tabindex="-1" aria-labelledby="create-new-collection"
    aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-body">
                <div class="progress">
                    <p class="progress-text"></p>
                    <div class="progress-bar" role="progressbar" aria-label="Basic example" style="width: 50%"
                        aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
</div>