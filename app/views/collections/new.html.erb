<div class="row p-4">
  <div class="col-2"></div>
  <div class="col-8 text-center">
    <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#create-new-collection">New
      Collection
      &nbsp;<i class="fas fa-plus"></i>
    </button>
  </div>
  <div class="col-2"></div>
</div>

<div class="modal fade" id="create-new-collection" tabindex="-1" aria-labelledby="create-new-collection"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create a collection</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input name="new_collection_name" type="text" class="form-control min-input" id="collection-name-input"
          placeholder="Collection Name" aria-label="New collection name" aria-describedby="basic-addon1" />
        <%= render partial: "layouts/image_uploader" , locals: {image_id: "image-result-2" ,
          uploader_input_id: "uploader-input-2" } %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button id="modal-new-collection-create-button" type="button" class="btn btn-primary">Create</button>
      </div>
    </div>
  </div>
</div>

<div class="toast-container position-fixed top-0 end-0 p-3">
  <div id="liveToastOk" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <strong class="me-auto">Pirate Radio Club</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
      Successfully created new collection.
    </div>
  </div>
</div>

<div class="toast-container position-fixed top-0 end-0 p-3">
  <div id="liveToastFail" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <strong class="me-auto">Metart</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">Failed to create a new collection. Please try again.</div>
  </div>
</div>

<div class="modal fade" id="progress-bar-wrapper" tabindex="-1" aria-labelledby="create-new-collection"
  aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-body">
        <p class="progress-text"></p>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-label="Basic example" style="width: 50%" aria-valuenow="0"
            aria-valuemin="0" aria-valuemax="100"></div>
        </div>
      </div>
    </div>
  </div>
</div>